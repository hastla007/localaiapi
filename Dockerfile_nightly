FROM nvidia/cuda:12.4.1-devel-ubuntu22.04

# Set environment variables
ENV DEBIAN_FRONTEND=noninteractive
ENV PYTHONUNBUFFERED=1
ENV PIP_NO_CACHE_DIR=1

# Blackwell support
ENV TORCH_CUDA_ARCH_LIST="12.0"
ENV FORCE_CUDA=1

# Install Python 3.12 (required for best Blackwell support)
RUN apt-get update && apt-get install -y \
    software-properties-common \
    && add-apt-repository ppa:deadsnakes/ppa \
    && apt-get update && apt-get install -y \
    python3.12 \
    python3.12-dev \
    python3.12-distutils \
    git \
    wget \
    build-essential \
    libgl1-mesa-glx \
    libglib2.0-0 \
    && rm -rf /var/lib/apt/lists/*

# Set python3.12 as default
RUN update-alternatives --install /usr/bin/python3 python3 /usr/bin/python3.12 1

# Install pip for Python 3.12
RUN wget https://bootstrap.pypa.io/get-pip.py && \
    python3 get-pip.py && \
    rm get-pip.py

RUN pip3 install --upgrade pip setuptools wheel

WORKDIR /app

# Install PyTorch 2.9.0.dev nightly with CUDA 12.4
# Using the direct wheel method as shown in successful implementations
RUN pip3 install --pre torch torchvision \
    --index-url https://download.pytorch.org/whl/nightly/cu124

# Verify PyTorch installation
RUN python3 << 'EOF'
import torch
print('='*60)
print(f'PyTorch Version: {torch.__version__}')
print(f'CUDA Available: {torch.cuda.is_available()}')
print(f'CUDA Version: {torch.version.cuda}')
print('='*60)

if torch.cuda.is_available():
    print('GPU Detection Test:')
    print(f'  GPU Name: {torch.cuda.get_device_name(0)}')
    print(f'  Compute Capability: {torch.cuda.get_device_capability(0)}')
    print(f'  Total VRAM: {torch.cuda.get_device_properties(0).total_memory / 1e9:.2f} GB')
    
    # Critical: Test tensor operations
    print('\nTensor Operations Test:')
    try:
        x = torch.randn(1000, 1000, device='cuda')
        y = torch.randn(1000, 1000, device='cuda')
        z = torch.matmul(x, y)
        print('  ✅ Matrix multiplication: SUCCESS')
        
        # Test convolution (critical for diffusion models)
        conv = torch.nn.Conv2d(3, 64, 3, padding=1).cuda()
        test_input = torch.randn(1, 3, 256, 256, device='cuda')
        output = conv(test_input)
        print('  ✅ Convolution: SUCCESS')
        
        print('\n🎉 All GPU tests passed! Blackwell is working!')
    except Exception as e:
        print(f'  ❌ GPU operations failed: {e}')
        exit(1)
else:
    print('❌ CUDA not available!')
    exit(1)
print('='*60)
EOF

# Copy and install requirements
COPY requirements.txt .
RUN pip3 install --no-cache-dir -r requirements.txt

# Verify final PyTorch version wasn't downgraded
RUN python3 -c "import torch; print(f'Final PyTorch: {torch.__version__}')"

# Copy application code
COPY main.py .
COPY model_manager.py .

# Create directories
RUN mkdir -p /app/models /app/outputs /app/cache /app/templates

# Copy templates
COPY templates/ /app/templates/

# Expose port
EXPOSE 8000

# Run the application
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000", "--workers", "1"]
