# =====================================================
# Optimized for RTX 5070 Ti (Blackwell, sm_120)
# CUDA 12.6.0 + PyTorch 2.9.x + FastAPI / Uvicorn app
# =====================================================
FROM pytorch/pytorch:2.9.0-cuda12.6-cudnn9-runtime

# Environment configuration
ENV DEBIAN_FRONTEND=noninteractive \
    PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1 \
    HF_HOME=/root/.cache/huggingface \
    TORCH_CUDA_ARCH_LIST="8.0;8.6;8.9;9.0;12.0" \
    CUDA_LAUNCH_BLOCKING=0 \
    TORCH_USE_CUDA_DSA=1 \
    NVIDIA_VISIBLE_DEVICES=all \
    NVIDIA_DRIVER_CAPABILITIES=compute,utility

# System dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    python3-dev python3-venv \
    git wget curl build-essential \
    libgl1-mesa-glx libglib2.0-0 \
    && rm -rf /var/lib/apt/lists/*

# Upgrade pip & core packaging tools
RUN pip install --upgrade pip setuptools wheel

# Set working directory
WORKDIR /app

# Pre-install stable PyTorch (ensures CUDA 12.6 build)
RUN pip install --upgrade torch==2.9.0 torchvision==0.20.0 torchaudio==2.9.0 \
    --index-url https://download.pytorch.org/whl/cu126

# Verify PyTorch and GPU visibility
RUN python - <<'EOF'
import torch
print('='*60)
print(f"PyTorch Version: {torch.__version__}")
print(f"CUDA Runtime: {torch.version.cuda}")
print(f"CUDA Available: {torch.cuda.is_available()}")
if torch.cuda.is_available():
    print(f"GPU: {torch.cuda.get_device_name(0)}")
    print(f"Compute Capability: {torch.cuda.get_device_capability(0)}")
print('='*60)
EOF

# Copy application dependencies (excluding PyTorch itself)
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Verify PyTorch still correct (no downgrade)
RUN python -c "import torch; print('Final PyTorch:', torch.__version__)"

# Copy your application code
COPY main.py .
COPY model_manager.py .
COPY templates/ /app/templates/

# Create runtime directories
RUN mkdir -p /app/models /app/outputs /app/cache /app/templates

# Expose API port
EXPOSE 8000

# Default command â€” start FastAPI / Uvicorn app
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000", "--workers", "1"]
